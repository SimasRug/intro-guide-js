.ig-invisible
	display none


.ig-fadein-nav
	transition opacity 0.3s, filter 0.3s
	opacity 1
		
.ig-fadein
	canvas
		transition opacity 0.3s, filter 0.3s
		opacity 1
		// filter alpha(opacity=100)
	.ig-infobox
		opacity 1

.ig-tooltip
	padding 0.5em
	z-index 2000
	color #000
	font-size 1.5em
	background-color rgba(255,255,255,0.8);
	
