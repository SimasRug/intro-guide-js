fontFamily = Helvetica, arial, sans-serif


.ig-maincontainer
	font-size 2rem
	position absolute
	left 0
	top 0
	width 100%
	height 100%

.ig-canvas-with-hole
	z-index 1
	position fixed
	left 0
	top 0
	width 100%
	height 100%
	transition opacity 0.3s, filter 0.3s
	opacity 0
	// filter alpha(opacity=0)

.ig-btnclose
	position fixed
	display block
	right 0.2em
	top 0
	color #ccc
	z-index 1
	font-size 1.6em
	cursor pointer
	transition color 0.3s

.ig-btnclose:hover
	color #fff

.ig-infobox
	position fixed
	z-index 2
	transition left 0.5s, top 0.5s, margin 0.8s, opacity 0.5s
	color #fff
	padding 0 0.5em 0.5em 0.5em
	margin 0.5em
	min-width 9em
	max-width 14em
	opacity 0
	*
		color #fff
	h3
		padding-top 0
		margin-top 0
		margin-bottom 0
		font-family fontFamily
		font-size 1.2em
		line-height 1
	section
		font-size 0.8em
		// max-width 14em
		word-break normal
		line-height 1.1
		font-family fontFamily
		font-size 0.7em
		margin-top 0.3em
	

.ig-nav-container
	// width 100%
	// bottom 1em
	margin-top 0.5em
	// z-index 2002
	position relative //absolute
	font-size 1em
	float left
	opacity 0
	

.ig-nav
	position relative
	display table
	margin 0 auto
	// color #F00
	// color rgb(255, 175, 69)
	color #fff

.ig-nav-btn-group
	white-space nowrap
	// margin-top 1em
	
.ig-nav-btn
	display inline-block
	// float left
	margin 0
	// color #F00
	cursor pointer
	// font-weight bold
	// touch-action manipulation
	user-select none
	padding 0.3em 0.7em
	transition background-color 0.3s //, border 0.3s
	border 1px solid transparent
	// i
	// 	vertical-align bottom


btnBorderColor = #fff

.ig-nav-btn:nth-child(2)
	border-left-color btnBorderColor
	margin-left -1px
	// border-radius 0 4px 4px 0
	
.ig-nav-btn:hover
	border-color btnBorderColor
	// background-color rgba(200,200,200,0.3)
	box-shadow -1px -1px 12px rgba(200,200,200,0.5)
	// border 1px solid rgba(255,255,255,0)
	
